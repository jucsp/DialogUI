<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Script file="src\frames\configFrame\config.frame.lua" />
    
    <!-- EditBox Template for Config -->
    <EditBox name="DConfigEditBoxTemplate" virtual="true" letters="5">
        <Size>
            <AbsDimension x="80" y="25" />
        </Size>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBG" file="Interface\AddOns\DialogUI\src\assets\art\parchment\ButtonHighlight-Gossip">
                    <Size>
                        <AbsDimension x="80" y="25" />
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                    <Color>
                        <Color r="0.9" g="0.9" b="0.8" a="0.9" />
                    </Color>
                </Texture>
            </Layer>
        </Layers>
        <FontString inherits="DQuestButtonTitleGossip" />
        <Scripts>
            <OnLoad>
                this:SetAutoFocus(false);
                this:SetNumeric(false);
            </OnLoad>
            <OnEscapePressed>
                this:ClearFocus();
            </OnEscapePressed>
        </Scripts>
    </EditBox>

    <!-- Main Config Frame -->
    <Frame name="DConfigFrame" toplevel="true" parent="UIParent" movable="false" enableMouse="true" hidden="true">
        <Size>
            <AbsDimension x="480" y="600" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\AddOns\DialogUI\src\assets\art\parchment\Parchment">
                    <Size x="480" y="600" />
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString name="DConfigFrameTitle" inherits="DQuestTitleFont" text="Configuración DialogUI" justifyH="CENTER">
                    <Size>
                        <AbsDimension x="430" y="25"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-30" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <!-- Scroll Frame for scrollable content -->
            <ScrollFrame name="DConfigScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size>
                    <AbsDimension x="430" y="440" />
                </Size>
                <Anchors>
                    <Anchor point="TOP" relativeTo="DConfigFrameTitle" relativePoint="BOTTOM">
                        <Offset>
                            <AbsDimension x="0" y="-20" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <ScrollChild>
                    <Frame name="DConfigScrollChild">
                        <Size>
                            <AbsDimension x="400" y="1000" />
                        </Size>
                        <Layers>
                            <Layer level="ARTWORK">
                                <!-- Information Text -->
                                <FontString name="DConfigInfoText" inherits="DQuestFont" justifyH="LEFT" justifyV="TOP">
                                    <Size>
                                        <AbsDimension x="380" y="240"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="TOP">
                                            <Offset>
                                                <AbsDimension x="0" y="-10" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                                
                                <!-- Scale Label -->
                                <FontString name="DConfigScaleLabel" inherits="DQuestButtonTitleGossip" text="Escala:" justifyH="LEFT">
                                    <Size>
                                        <AbsDimension x="345" y="20" />
                                    </Size>
                                    <Anchors>
                                        <Anchor point="TOP" relativeTo="DConfigInfoText" relativePoint="BOTTOM">
                                            <Offset>
                                                <AbsDimension x="0" y="-20" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                                
                                <!-- Transparency Label -->
                                <FontString name="DConfigAlphaLabel" inherits="DQuestButtonTitleGossip" text="Transparencia:" justifyH="LEFT">
                                    <Size>
                                        <AbsDimension x="345" y="20" />
                                    </Size>
                                    <Anchors>
                                        <Anchor point="TOP" relativeTo="DConfigScaleLabel" relativePoint="BOTTOM">
                                            <Offset>
                                                <AbsDimension x="0" y="-35" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                                
                                <!-- Font Size Label -->
                                <FontString name="DConfigFontLabel" inherits="DQuestButtonTitleGossip" text="Tamaño de Fuente:" justifyH="LEFT">
                                    <Size>
                                        <AbsDimension x="345" y="20" />
                                    </Size>
                                    <Anchors>
                                        <Anchor point="TOP" relativeTo="DConfigAlphaLabel" relativePoint="BOTTOM">
                                            <Offset>
                                                <AbsDimension x="0" y="-35" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Frames>
                            <!-- Scale EditBox -->
                            <EditBox name="DConfigScaleEditBox" inherits="DConfigEditBoxTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativeTo="DConfigScaleLabel" relativePoint="LEFT">
                                        <Offset>
                                            <AbsDimension x="50" y="0" />
                                        </Offset>
                                    </Anchor>
                                </Anchors>
                                <Scripts>
                                    <OnEnterPressed>
                                        DConfigScaleEditBox_OnEnterPressed();
                                    </OnEnterPressed>
                                </Scripts>
                            </EditBox>

                            <!-- Transparency EditBox -->
                            <EditBox name="DConfigAlphaEditBox" inherits="DConfigEditBoxTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativeTo="DConfigAlphaLabel" relativePoint="LEFT">
                                        <Offset>
                                            <AbsDimension x="100" y="0" />
                                        </Offset>
                                    </Anchor>
                                </Anchors>
                                <Scripts>
                                    <OnEnterPressed>
                                        DConfigAlphaEditBox_OnEnterPressed();
                                    </OnEnterPressed>
                                </Scripts>
                            </EditBox>

                            <!-- Font Size EditBox -->
                            <EditBox name="DConfigFontEditBox" inherits="DConfigEditBoxTemplate">
                                <Anchors>
                                    <Anchor point="LEFT" relativeTo="DConfigFontLabel" relativePoint="LEFT">
                                        <Offset>
                                            <AbsDimension x="125" y="0" />
                                        </Offset>
                                    </Anchor>
                                </Anchors>
                                <Scripts>
                                    <OnEnterPressed>
                                        DConfigFontEditBox_OnEnterPressed();
                                    </OnEnterPressed>
                                </Scripts>
                            </EditBox>
                        </Frames>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
            
            <!-- Fixed buttons outside scroll area -->
            <Button name="DConfigResetButton" inherits="DUIPanelButtonTemplate" text="RESTABLECER">
                <Size>
                    <AbsDimension x="180" y="35" />
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="-90" y="50" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        DConfigResetButton_OnClick();
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="DConfigCloseButton" inherits="DUIPanelButtonTemplate" text="CERRAR">
                <Size>
                    <AbsDimension x="100" y="35" />
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="90" y="50" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        DConfigCloseButton_OnClick();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad>
                DConfigFrame_OnLoad();
            </OnLoad>
            <OnShow>
                DConfigFrame_OnShow();
            </OnShow>
            <OnHide>
                DConfigFrame_OnHide();
            </OnHide>
        </Scripts>
    </Frame>
</Ui>
